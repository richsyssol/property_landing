<IfModule mod_rewrite.c>
    Options +FollowSymLinks -MultiViews
    RewriteEngine On
    #RewriteBase /property/
    
    # Allow direct access to files/folders
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Your custom routes
    RewriteRule ^index/([^/]+)/?$ index.php?slug=$1 [L,QSA,NC]
    RewriteRule ^welcome/([^/]+)/?$ welcome.php?property_type=$1 [L,QSA,NC]
    RewriteRule ^wel-come/([^/]+)/?$ wel-come.php?slug=$1 [L,QSA,NC]
    RewriteRule ^([^/.]+)/?$ property.php?slug=$1 [L,QSA,NC]
    
    # Fallback to index.php
    RewriteRule ^ index.php [L]
</IfModule>

